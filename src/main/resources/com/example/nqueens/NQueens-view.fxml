<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" prefHeight="100" prefWidth="100" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nqueens.NQueensController">
   <children>
      <Pane HBox.hgrow="ALWAYS">
         <children>
            <GridPane fx:id="chessBoard" alignment="CENTER" styleClass="board" stylesheets="@style.css" visible="false" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Pane>
      <Pane HBox.hgrow="ALWAYS">
         <children>
            <Text layoutX="14.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose the size of the chessboard:" textAlignment="CENTER" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
               <font>
                  <Font size="14" />
               </font>
            </Text>
            <MenuButton layoutX="14.0" layoutY="90.0" mnemonicParsing="false" prefWidth="200" text="Board Size" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="45">
               <items>
                  <MenuItem onAction="#createBoard" text="8x8" />
                  <MenuItem onAction="#createBoard" text="10x10" />
                  <MenuItem onAction="#createBoard" text="12x12" />
               </items>
            </MenuButton>
            <Text layoutX="14.0" layoutY="168.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose the solving method:" textAlignment="CENTER" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="120">
               <font>
                  <Font size="14" />
               </font>
            </Text>
            <MenuButton layoutX="14.0" layoutY="210.0" mnemonicParsing="false" prefWidth="200" text="Solving Method" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="165">
               <items>
                  <MenuItem onAction="#searchDFS" text="DFS" />
                  <!--<MenuItem onAction="#searchBFS" text="BFS" />-->
                  <MenuItem onAction="#searchAstar1" text="A*1" />
<!--                  <MenuItem onAction="#searchAstar2" text="A*2" />-->
               </items>
            </MenuButton>
            <Button layoutX="115.0" layoutY="284.0" mnemonicParsing="false" onAction="#placeQueens" prefHeight="29.0" prefWidth="63.0" text="Start" AnchorPane.leftAnchor="115.0" AnchorPane.rightAnchor="-87.33333333333333" AnchorPane.topAnchor="284.0" />
            <Button layoutX="41.0" layoutY="284.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="63.0" text="Restart" AnchorPane.leftAnchor="72" AnchorPane.rightAnchor="72" AnchorPane.topAnchor="245" />
         </children>
      </Pane>
   </children>
</HBox>
